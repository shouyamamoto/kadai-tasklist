<h1>Log in</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

    <%= f.label :email, 'Email' %>
    <%= f.email_field :email %>

    <%= f.label :password, 'Password' %>
    <%= f.password_field :password, class: 'form-control' %>

    <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
    
<% end %>

<%= link_to 'signup!', signup_path %>
